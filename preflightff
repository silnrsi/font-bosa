#!/bin/sh

# Fix up glifs in files touched by FontForge and normalize
psffixffglifs source/BosaLisu-Regular.ufo -p checkfix=fix
psffixffglifs source/BosaLisu-Italic.ufo -p checkfix=fix

# Following sync will copy psnames and glyphorder updates to all fonts
psfsyncmasters source/BosaUpright.designspace source/BosaItalic.designspace
