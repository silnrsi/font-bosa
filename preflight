#!/bin/sh

# This normalization will also run check and fix routines
psfnormalize -p checkfix=fix source/LisuNew-Regular.ufo
psfnormalize -p checkfix=fix source/LisuNew-Bold.ufo
psfnormalize -p checkfix=fix source/LisuNew-Italic.ufo
psfnormalize -p checkfix=fix source/LisuNew-BoldItalic.ufo

# Following sync will copy psnames and glyphorder updates to all fonts
psfsyncmasters source/LisuNewRoman.designspace source/LisuNewItalic.designspace
