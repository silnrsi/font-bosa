#!/bin/sh

# This normalization will also run check and fix routines
psfnormalize -p checkfix=fix source/masters/BosaLisuMaster-Regular.ufo
psfnormalize -p checkfix=fix source/masters/BosaLisuMaster-ExtraLight.ufo
psfnormalize -p checkfix=fix source/masters/BosaLisuMaster-Black.ufo
psfnormalize -p checkfix=fix source/masters/BosaLisuMaster-Italic.ufo
psfnormalize -p checkfix=fix source/masters/BosaLisuMaster-ExtraLightItalic.ufo
psfnormalize -p checkfix=fix source/masters/BosaLisuMaster-BlackItalic.ufo

# Following sync will copy psnames and glyphorder updates to all fonts
psfsyncmasters --complex source/BosaUpright.designspace source/BosaItalic.designspace
